{
  "name": "obsidian-snippetor",
  "version": "0.4.5",
  "description": "Generate and tweak common snippets",
  "main": "main.js",
  "scripts": {
    "dev": "node esbuild.config.mjs",
    "fix": "npx @biomejs/biome check --write ./src",
    "format": "npx @biomejs/biome format ./src",
    "lint": "npx @biomejs/biome lint ./src",
    "prebuild": "npx @biomejs/biome check ./src",
    "build": "node esbuild.config.mjs production",
    "postbuild": "cp -v manifest.json README.md build",
    "test": "npx jest",
    "preversion": "npm run test && npm run build",
    "version": "auto-changelog -p",
    "brat-notes": "run() { auto-changelog --stdout --hide-credit --hide-empty-releases --template .github/changelog.hbs -v $1 --starting-version $1  > release-notes.md; }; run"
  },
  "keywords": [
    "obsidian",
    "obsidian-md",
    "obsidian-plugin",
    "obsidian-md-plugin"
  ],
  "author": "ebullient",
  "repository": "github.com:ebullient/obsidian-snippetor",
  "license": "AGPL-3.0-only",
  "devDependencies": {
    "@biomejs/biome": "2.3.6",
    "@popperjs/core": "^2.11.2",
    "@types/chroma-js": "^3.1.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/randomcolor": "^0.5.9",
    "auto-changelog": "^2.5.0",
    "builtin-modules": "^5.0.0",
    "dotenv": "^17.2.2",
    "esbuild": "0.27.0",
    "esbuild-sass-plugin": "^3.3.1",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "obsidian": "^1.11.0",
    "ts-jest": "^29.4.1",
    "tslib": "^2.8.1",
    "typescript": "5.9.3"
  },
  "dependencies": {
    "compare-versions": "^6.1.1",
    "eta": "^4.4.1",
    "random-word-slugs": "^0.1.6",
    "randomcolor": "^0.6.2"
  },
  "auto-changelog": {
    "backfillLimit": false,
    "commitLimit": false,
    "ignoreCommitPattern": "(ðŸ”–|ðŸ”¨|ðŸ§¹|changelog|release|Update README).*",
    "replaceText": {
        "([;.,] [rR]esolves) #\\d+\\.?\\s*$": "$1",
        "([;.,] [Ff]ixes) #\\d+\\.?\\s*$": "$1"
    }
  }
}
