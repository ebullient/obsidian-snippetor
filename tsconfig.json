{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "es6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2019"
    ],
    "types": [
      "mocha",
      "jest"
    ]
  },
  "include": [
    "**/*.ts"
  ]
}
